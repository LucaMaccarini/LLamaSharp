<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaccaMauiLLamasharp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry
                x:Name="tx_input"
                Placeholder="Scrivi qualcosa da chiedere..."
                VerticalOptions="Center"
                HorizontalOptions="Center"/>


            <Button Text="Chiedi"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Clicked="OnButtonClicked"/>

            <Label
                x:Name="lbl"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
