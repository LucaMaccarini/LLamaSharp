<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMuseo.Views.AudioGuida"
             Title="AudioGuida">
    <VerticalStackLayout>
        
        <Entry x:Name="tx_text" Margin="10,10,10,10" />
        <Button 
            Text="Chiedi al modello"
            Margin="10,10,10,10"
            Clicked="ScriviAlModello"
            />

        <HorizontalStackLayout>

            <Button 
                Text="Genera Audio Guida"
                Margin="10,10,10,10"
                Clicked="GeneraAudioGuida"
                />

            <Button 
                Text="leggi"
                Margin="10,10,10,10"
                Clicked="Leggi"
                />

            <Button 
                Text="Pulisci"
                Margin="10,10,10,10"
                Clicked="Pulisci"
                />
        </HorizontalStackLayout>


            <Editor
                 x:Name="lbl_risp"
                 IsReadOnly="True" 
                 FontSize="16"
                AutoSize="TextChanges"
                HeightRequest="470"
                />




    </VerticalStackLayout>
</ContentPage>