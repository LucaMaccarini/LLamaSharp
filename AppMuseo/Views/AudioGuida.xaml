<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMuseo.Views.AudioGuida"
             Title="AudioGuida">
    <VerticalStackLayout>

        <Entry x:Name="lbl_text" Margin="10,10,10,10"/>
        <Button 
            Text="Chiedi al modello"
            Margin="10,10,10,10"
            Clicked="ScriviAlModello"
            />
        
        <Button 
        Text="Genera Audio Guida"
        Margin="10,10,10,10"
        Clicked="GeneraAudioGuida"
        />
        <Label
            x:Name="lbl_risp"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />


    </VerticalStackLayout>
</ContentPage>