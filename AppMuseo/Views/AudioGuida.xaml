<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMuseo.Views.AudioGuida"
             Title="AudioGuida">
    <VerticalStackLayout>
        <Label
            x:Name="lbl_log"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0, 10, 0, 10"
            />

        <HorizontalStackLayout  HorizontalOptions="Center">

            <Button Text="Estrai file Modello"
             VerticalOptions="Center"
             HorizontalOptions="Center"
             Clicked="EstraiModello"/>

            <!--<Button Text="Carica Modello"
             VerticalOptions="Center"
             HorizontalOptions="Center"
             Clicked="CaricaModello"/>-->

        </HorizontalStackLayout>

        <Entry x:Name="lbl_text" Margin="10,10,10,10"/>
        <Button 
            Text="Chiedi al modello"
            Margin="10,10,10,10"
            Clicked="ScriviAlModello"
            />
        <Label
            x:Name="lbl_risp"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />


    </VerticalStackLayout>
</ContentPage>