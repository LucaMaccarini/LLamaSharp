<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AppMuseo.Views"
             x:Class="AppMuseo.Views.StartPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Verifica delle risorse"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            
            <HorizontalStackLayout>
                <Label
                    Text="Presenza del modello AI"
                    HorizontalOptions="StartAndExpand" />

                <Label
                    x:Name="lbl_AIModelPresence"
                    Text=""
                    HorizontalOptions="EndAndExpand" />
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label
                    Text="Caricamento del modello AI"
                    HorizontalOptions="StartAndExpand" />

                <Label
                    x:Name="lbl_AIModelLoaded"
                    Text=""
                    HorizontalOptions="EndAndExpand" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
